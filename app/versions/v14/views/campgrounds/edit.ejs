<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container">

    <div class="row">
        <h1 style="text-align:center;">Edit campground <%= campground["name"] %></h1>
        <div style="width:30%;margin:3% auto">
            <form action="/campgrounds/<%= campground['_id'] %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campground[name]">Name</label>
                    <input type="text" name="campground[name]"  class="form-control" value="<%= campground['name'] %> ">
                </div>
                <div class="form-group">
                    <label for="campground[price]">Price</label>
                     <input type="number" value="<%= campground['price'] %>" name="campground[price]"  class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="campground[image]">Image URL</label>
                    <input type="text" name="campground[image]"  class="form-control" value="<%= campground.image %> ">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="campground["description"]">Description</label>
                    <textarea class="form-control" rows="5" id="newCampground-desc" 
                    name="campground[description]" >
                        <%= campground["description"] %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>