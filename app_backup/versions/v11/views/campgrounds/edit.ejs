<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container">

    <div class="row">
        <h1 style="text-align:center;">Edit campground <%= campground["name"] %></h1>
        <div style="width:30%;margin:3% auto">
            <form action="/campgrounds/<%= campground['_id'] %>?_method=PUT" method="POST">
                <div class="form-group">
                     <input type="text" placeholder="name" name="campground[name]"  class="form-control" value="<%= campground['name'] %> ">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="image url" name="campground[image]"  class="form-control" value="<%= campground.image %> ">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" id="newCampground-desc" 
                    placeholder="description" name="campground[description]" >
                        <%= campground["description"] %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>