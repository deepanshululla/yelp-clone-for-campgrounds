<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container">

    <div class="row">
       <div class="col-lg-6 col-sm-10">
            <h3> Edit comment  </h3>
            <div>
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                    
                     <div class="form-group">
                        <label for="newComment-desc">Your comments</label>
                        <textarea class="form-control" rows="3" id="newComment-desc" 
                        name="comment[text]">
                            <%= comment.text %>
                        </textarea>
                    </div>
                  
                    
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground_id  %>"> Go back</a>
            </div>
            
        </div>
    </div> 
       
    
</div>

<% include ../partials/footer %>